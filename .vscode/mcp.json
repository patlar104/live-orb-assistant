{
  "servers": {
    "openaiDeveloperDocs": {
      "type": "http",
      "url": "https://developers.openai.com/mcp"
    },
    "io.github.upstash/context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@2.1.0"],
      "env": {
        "CONTEXT7_API_KEY": "${input:CONTEXT7_API_KEY}"
      },
      "gallery": "https://api.mcp.github.com",
      "version": "2.1.0"
    },
    "microsoft/markitdown": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--python", "3.13", "markitdown-mcp"],
      "gallery": "https://api.mcp.github.com",
      "version": "1.0.0"
    },
    "microsoft/playwright-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "gallery": "https://api.mcp.github.com",
      "version": "0.0.1-seed"
    },
    "io.github.github/github-mcp-server": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN=${input:token}",
        "ghcr.io/github/github-mcp-server:0.30.3"
      ],
      "gallery": "https://api.mcp.github.com",
      "version": "0.30.3"
    }
  },
  "inputs": [
    {
      "id": "CONTEXT7_API_KEY",
      "type": "promptString",
      "description": "API key for authentication",
      "password": true
    },
    {
      "id": "GITHUB_TOKEN",
      "type": "promptString",
      "description": "GitHub Personal Access Token (with repo, read:org scopes)",
      "password": true
    },
    {
      "id": "token",
      "type": "promptString",
      "description": "",
      "password": true
    }
  ]
}
